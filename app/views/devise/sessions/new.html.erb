<div class="admin-panel">
<h2>Admin panel</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
        <i class="fa fa-user"></i>
        <%= f.email_field :email, autofocus: true , :class=>"admin-input-email",:placeholder=>"Emaiil"%>
    </div>
    <div class="form-group">
        <i class="fa fa-lock"></i>
        <%= f.password_field :password, autocomplete: "off", :class=>"admin-input-password",:placeholder=>"Password" %>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="form-group">
        <%= f.check_box :remember_me, :class=>"admin-input-check-box" %>
        <%= f.label :remember_me %>
    </div>
    <% end -%>
    <div class="form-group">
        <%= f.submit "Se connecter", :class=>"admin-input-submit" %>
         <%= render "devise/shared/links" %>
    </div>
    <% end %>
</div>