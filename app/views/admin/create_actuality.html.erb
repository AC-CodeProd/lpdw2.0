<h2>Ajouter une actualité</h2>
<%= form_for(@actuality, url:  admin_create_actuality_path, html: {class: "form" }) do |f| %>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :title, autofocus: true , :class => 'input' ,:placeholder=>"Titre" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_area :content, autocomplete: "off", :class => 'input textarea' ,:placeholder=>"Contenu" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= hidden_field :author , current_user.email %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.submit "Creer actualité", :class => 'input-btn' %>
  </div>
</div>
<% end %>