<h2>Modifier actualité</h2>
<%= current_user.email %> 
<%= form_for(:this, url:  admin_edit_actuality_path, html: {class: "form" }) do |f| %>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_field :title, autofocus: true , :class => 'input' ,:placeholder=>"Titre" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.text_area :content, :class => "tinymce", :rows => 40, :cols => 120 %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.hidden_field :author, :value => current_user.email %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-10">
    <%= f.submit "Mise à jour", :class => 'input-btn' %>
  </div>
</div>
<% end %>